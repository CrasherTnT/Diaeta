<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="tnt_codefest.diaeta.profile">
<FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/background"
        android:layout_width="470dp"
        android:layout_height="240dp"
        android:layout_marginLeft="-35dp"
        android:layout_marginTop="-10dp"
        android:background="@drawable/background_default" />
    <ImageView
        android:id="@+id/profile_placeholder"
        android:layout_marginTop="160dp"
        android:layout_width="105dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/ellipse"
        />
    <TextView
        android:id="@+id/name_placeholder"
        android:layout_marginTop="260dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name Placeholder"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:fontFamily="sans-serif-thin"
        android:textColor="#00A706"/>
    <TextView
        android:id="@+id/weightclass_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="290dp"
        android:fontFamily="sans-serif-thin"
        android:text="weight class placeholder"
        android:textColor="#00A706"
        android:textSize="10dp" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:id="@+id/progress_bar"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="310dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="10dp"
        android:minWidth="200dp"
        android:progressTint="#FF0D0D"
        android:progress="50"/>

    <TextView
        android:id="@+id/percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-thin"
        android:text="50%"
        android:textColor="@color/darkgrey"
        android:textSize="8dp"
        android:translationX="310dp"
        android:translationY="310dp" />
    <TextView
        android:id="@+id/progress_bar_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="320dp"
        android:fontFamily="sans-serif-thin"
        android:text="Daily Diet Progress"
        android:textColor="@color/darkgrey"
        android:textSize="8dp" />
    <TextView
        android:id="@+id/BMI_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:translationX="-20dp"
        android:translationY="335dp"
        android:fontFamily="sans-serif-thin"
        android:text="BMI:"
        android:textColor="@color/darkgrey"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/BMI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:translationX="25dp"
        android:translationY="335dp"
        android:fontFamily="sans-serif-thin"
        android:text="18.5"
        android:textColor="@color/darkgrey"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="ACHIEVEMENTS"
        android:translationY="400dp"
        android:fontFamily="sans-serif-thin"
        android:textSize="25dp"
        android:textColor="#00A706"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationX="25dp"
        android:translationY="440dp"
        android:background="@drawable/achievement_1"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationX="150dp"
        android:translationY="440dp"
        android:background="@drawable/achievement_2"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationX="270dp"
        android:translationY="440dp"
        android:background="@drawable/achievement_3"/>
</FrameLayout>

</RelativeLayout>