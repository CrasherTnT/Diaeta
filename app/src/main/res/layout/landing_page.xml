<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="197dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                app:srcCompat="@drawable/logo"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="55dp" />

            <TextView
                android:id="@+id/label_text1"
                android:textSize="8dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="let's plan your diet!"
                />


            <EditText
                android:id="@+id/field_name"
                android:layout_below="@+id/label_text1"
                android:paddingLeft="20dp"
                android:background="@drawable/edit_round"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="230dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Username" />

            <EditText
                android:id="@+id/field_password"
                android:paddingLeft="20dp"
                android:layout_below="@+id/field_name"
                android:background="@drawable/edit_round"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="Password" />


            <Button
                android:id="@+id/button_login"
                android:layout_below="@+id/field_password"
                android:layout_width="100dp"
                android:layout_height="43dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/button_round"
                android:text="Log In"
                android:textColor="#00A706"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button_signup"
                android:layout_width="100dp"
                android:layout_height="43dp"
                android:layout_below="@+id/button_login"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_round2"
                android:text="Sign Up"
                android:textSize="18sp"
                android:textColor="#FFFF"/>

            <LinearLayout
                android:id="@+id/social_media"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/button_signup">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/facebook" />

                <ImageView
                    android:id="@+id/image_google"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/google" />

                <ImageView

                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/instagram" />
            </LinearLayout>



            <TextView
                android:layout_below="@+id/social_media"
                android:layout_centerHorizontal="true"
                android:textSize="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Developed by Team CraSHER"/>

        </RelativeLayout>




    </ScrollView>




</RelativeLayout>
