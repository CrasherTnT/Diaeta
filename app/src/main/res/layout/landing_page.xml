<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="197dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                app:srcCompat="@drawable/logo"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="55dp" />

            <TextView
                android:id="@+id/label_text1"
                android:textSize="8dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="let's plan your diet!"
                />


            <EditText
                android:id="@+id/field_name"
                android:layout_below="@+id/label_text1"
                android:paddingLeft="20dp"
                android:background="@drawable/edit_round"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="250dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Username" />

            <EditText
                android:id="@+id/field_password"
                android:paddingLeft="20dp"
                android:layout_below="@+id/field_name"
                android:background="@drawable/edit_round"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="Password" />


            <Button
                android:id="@+id/button2"
                android:layout_below="@+id/field_password"
                android:layout_width="100dp"
                android:layout_height="43dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="147dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/button_round"
                android:text="Log In"
                android:textColor="#00A706"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="100dp"
                android:layout_height="43dp"
                android:layout_below="@+id/button2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/button_round2"
                android:text="Sign Up"
                android:textSize="18sp"
                android:textColor="#FFFF"/>

        </RelativeLayout>




    </ScrollView>




</RelativeLayout>
