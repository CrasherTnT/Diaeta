<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BMI_Calculator.MainBMICalculator"
    android:background="@drawable/head">

    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/label_letsee"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:paddingRight="120dp"
                android:layout_height="wrap_content"
                android:text="Let's see your" />

            <TextView
                android:id="@+id/label_weightclass"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/label_letsee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Weight Class"
                android:textColor="#00A706"
                android:textSize="35sp" />

            <ImageView
                android:layout_toRightOf="@+id/label_weightclass"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="45dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/scale" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_marginBottom="20dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/label_unit"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unit: "/>
            <Spinner
                android:layout_below="@+id/label_unit"
                android:background="@drawable/button_round"
                android:id="@+id/spinner_bmi_category"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                />
        </RelativeLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Height"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/field_feet"
                android:background="@drawable/edit_round"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="5"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:hint="Feet"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/field_inches"
                android:background="@drawable/edit_round"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="5"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:hint="Inches"
                android:inputType="textPersonName" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/field_pounds"
                android:background="@drawable/edit_round"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:ems="10"
                android:hint="Pounds"
                android:padding="10dp"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <Button
                android:id="@+id/button_calculate"
                android:layout_margin="15dp"
                android:padding="10dp"
                android:textColor="#fff"
                android:background="@drawable/button_round2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Calculate" />


            <!-- TEST BUTTON FOR LOGOUT -->
            <Button
                android:id="@+id/button_logout"
                android:padding="10dp"
                android:layout_margin="15dp"
                android:textColor="#fff"
                android:background="@drawable/button_round2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Logout" />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>